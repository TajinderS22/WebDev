<%- include("partials/header.ejs") %>
<body class="container-fluid">
    <h1 class="title intro container">To Do</h1>
    <h2 class="date intro container"> <%= today %> </h2>

    <div class="container inputArea">
        <form action="/add-task" method="post" >
            
            <input class="input" type="text" name="newTask" placeholder="Add New Task Here" required>
            <input type="submit" value="Add" class="btn btn-primary">
        </form>
    </div>

    <div class="container TaskArea">
        <ol id="ol">
            <% if(locals.task){ %>
                <% for (let i=0;i<task.length;i++){  %>
                    <li class="list" onclick=check()><img src="check-box-empty.png"> <%= task[i] %><span> &#10008; </span> </li> 
                <% } %>
            <% } %>  
        </ol>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    
</body>

</html>